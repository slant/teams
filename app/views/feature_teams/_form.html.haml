= form_for @feature_team do |f|
  - if @feature_team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature_team.errors.count, "error")} prohibited this feature_team from being saved:"
      %ul
        - @feature_team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :branch
    = f.text_field :branch

  - if controller.action_name == :edit
    .field
      = f.label :server
      = f.select :server_id, @available_servers.collect{ |s| [s.subdomain, s.id] }, include_blank: true

  -#.field
    -#%p= link_to 'Advanced...', '#'

  .actions
    = f.submit 'Save'
